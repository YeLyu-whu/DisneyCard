<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.disneycard.MainActivity">
    <ImageView
        android:src ="@drawable/disney"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        />
    <ImageView
        android:src ="@drawable/mickey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/disney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80cbc4"
        android:text="ShangHai DisneyLand"
        android:layout_alignParentLeft="true"
        android:textSize="34sp"
        android:padding="8dp"
        android:textColor="#ffffff"
        />
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To ShangHai Disney Land!"
        android:layout_below="@id/disney"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shanghai Disneyland Park is a theme park located in Pudong"
        android:layout_below="@id/welcome"
        android:layout_alignParentLeft="true"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PhoneNumber:021-20998001"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:Pudong, Shanghai, China"
        android:layout_alignParentRight="true"
        android:layout_above="@id/Phone"
        android:textSize="14sp"
        />
</RelativeLayout>
